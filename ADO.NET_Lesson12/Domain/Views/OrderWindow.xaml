<Window x:Class="ADO.NET_Lesson12.Domain.Views.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_Lesson12.Domain.Views"
        mc:Ignorable="d"
        Title="OrderWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock FontFamily="Cascadia Code SemiBold" FontSize="25">Unit Price</TextBlock>
            <TextBox IsReadOnly="True" FontFamily="Cascadia Code SemiBold" FontSize="25" Text="{Binding Order.UnitPrice ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBlock FontFamily="Cascadia Code SemiBold" FontSize="25">Quantity</TextBlock>
            <TextBox FontFamily="Cascadia Code SemiBold" FontSize="25" Text="{Binding Order.Quantity,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Command="{Binding SubmitCommand}">Submit</Button>
        </StackPanel>
    </Grid>
</Window>
